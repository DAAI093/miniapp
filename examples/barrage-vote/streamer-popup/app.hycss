.container {
  flex: 1;
  position: relative;
}

.timer-bg {
  width: 55%;
  height: 14%;
  margin: 0 auto;
  position: absolute;
  top: 0;
  left: 23%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.timer-bg_app_portrait {
  width: 59%;
  height: 14%;
  margin: 0 auto;
  position: absolute;
  top: 0;
  left: 23%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.timer-bg_app_landscape {
  width: 55%;
  height: 14%;
  margin: 0 auto;
  position: absolute;
  top: 0;
  left: 23%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.panel-bg {
  width: 100%;
  height: 94%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 6%;
  /* background: aqua; */
}

.panel-bg-img {
  width: 100%;
  height: 100%;
  /* background: orange; */
}

.panel-bg_app_portrait {
  width: 100%;
  height: 94%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 6%;
  /* background: hotpink; */
}

.panel-bg_app_landscape {
  width: 100%;
  height: 94%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 6%;
  /* background: aqua; */
}

.button-close {
  position: absolute;
  top: 4px;
  right: 4px;
  height: 50px;
  width: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: pink; */
}

.button-close_app_portrait {
  position: absolute;
  top: 4%;
  right: 4%;
  height: 14%;
  width: 14%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: pink; */
}

.button-close_app_landscape {
  position: absolute;
  top: 4%;
  right: 4%;
  height: 14%;
  width: 14%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: pink; */
}

.img-close {
  height: 32px;
  width: 32px;
}

.img-close_app_portrait {
  height: 95%;
  width: 95%;
}

.img-close_app_landscape {
  height: 95%;
  width: 95%;
}

.scroller {
  flex: 1;
  position: relative;
  margin: 14% 0;
  /* background: green; */
}

.clock {
  width: 100%;
  margin: 0 auto;
  color: #fff;
  font-size: 32px;
  font-weight: bold;
  text-align: center;
}

.pupop-title {
  color: #fff;
  font-size: 28px;
  font-weight: 500;
  margin-bottom: 16px;
}

